<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox fillHeight="false" VBox.vgrow="NEVER">
            <children>
                <TextField fx:id="currentFolderTextField" editable="false" HBox.hgrow="ALWAYS" />
                <Button onAction="#selectFolder" text="Open" HBox.hgrow="NEVER" />
                <Button onAction="#handleRefreshFileList" text="Refresh" />
            </children>
        </HBox>
        <ListView fx:id="filesListView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
    </children>
</VBox>
