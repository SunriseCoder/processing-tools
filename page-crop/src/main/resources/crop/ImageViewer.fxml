<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Polygon?>
<?import javafx.scene.shape.Rectangle?>

<SplitPane fx:id="splitPane" dividerPositions="0.8" prefHeight="768.0" prefWidth="1024.0" xmlns:fx="http://javafx.com/fxml/1">
    <items>
        <!-- Left working area -->
        <Pane fx:id="imagePane" focusTraversable="true">
            <children>
                <Rectangle fx:id="rectangle" fill="TRANSPARENT" />
                <ImageView fx:id="imageView" />
                <Polygon fx:id="polygon" fill="GREEN" opacity="0.5" strokeWidth="0" />
            </children>
        </Pane>
        <VBox prefHeight="200.0" prefWidth="100.0">
            <children>
                <HBox fillHeight="false" VBox.vgrow="NEVER">
                    <children>
                        <TextField fx:id="openFolderTextField" editable="false" HBox.hgrow="ALWAYS" />
                        <Button onAction="#selectFolder" text="Open" HBox.hgrow="NEVER" />
                        <Button onAction="#refreshFileList" text="Refresh" />
                    </children>
                </HBox>
                <ListView fx:id="filesListView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                <Button onAction="#saveImage" text="Save" VBox.vgrow="NEVER" />
                <Button onAction="#centerImage" text="Center" VBox.vgrow="NEVER" />
            </children>
        </VBox>
    </items>
</SplitPane>
